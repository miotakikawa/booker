<h1>Books</h1>

<table>
 <thead>
  <tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
  </tr>
 </thead>
<tbody>
<% @books.each do |book|%>
<tr>
 <!--<p>Title</p>-->
 <td><span><%=book.title%></span></td>
 <!--<p>Body</p>-->
 <td><span><%=book.body%></span></td>
 <td><%=link_to"Show",book_path(book)%></td>
 <td><%=link_to"Edit",edit_book_path(book)%></td>
 <td><%=link_to"Destroy",book_path(book),method: :delete%></td>
 </tr>
<%end%>
</tbody>
</table>

<h2>New Book</h2>

